<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="sidebar.main">
        <block class="Train\Blog\Block\Frontend\Sidebar\CategoryTree" name="blog_index_index" template="Train_Blog::categorytree.phtml"/>
        <block class="Train\Blog\Block\Frontend\Sidebar\PostTags" name="blog_index_posttags" template="Train_Blog::posttags.phtml"/>
    </referenceContainer>
    <referenceContainer name="content">
        <block class="Train\Blog\Block\Frontend\Content\CategoryView" name="blog_index_listpostcategory" template="Train_Blog::category_list_post.phtml"/>
        <block class="Train\Blog\Block\Frontend\Content\ListPost" name="blog_index_pagination" template="Train_Blog::pagination.phtml"/>
    </referenceContainer>
</page>


